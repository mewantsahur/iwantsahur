    }
}

function showValuesResults() {
    valuesQuestionContainer.style.display = 'none';
    valuesResultContainer.style.display = 'block';
    valuesScoreEl.textContent = valuesScore;
    valuesTotalEl.textContent = valuesQuestions.length;
    valuesQuizCompleted = true;
    valuesNextBtn.style.display = 'none';
}

function restartValuesQuiz() {
    currentValuesQuestionIndex = 0;
    valuesScore = 0;
    valuesQuestionContainer.style.display = 'block';
    valuesResultContainer.style.display = 'none';
    valuesNextBtn.style.display = 'block';
    valuesQuizCompleted = false;
    loadValuesQuestion();
}

// Values Quiz event listeners
valuesNextBtn.addEventListener('click', nextValuesQuestion);
valuesRestartBtn.addEventListener('click', restartValuesQuiz);

document.getElementById('valuesQuizModal').addEventListener('show.bs.modal', function () {
    loadValuesQuestion();
});

document.getElementById('valuesQuizModal').addEventListener('hidden.bs.modal', function () {
    if (!valuesQuizCompleted) return;
    currentValuesQuestionIndex = 0;
    valuesScore = 0;
    valuesQuestionContainer.style.display = 'block';
    valuesResultContainer.style.display = 'none';
    valuesNextBtn.style.display = 'block';
});
