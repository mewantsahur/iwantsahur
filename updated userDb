let currentValuesQuestionIndex = 0;
let selectedValuesOption = null;
let valuesScore = 0;
let valuesQuizCompleted = false;

function loadValuesQuestion() {
    const question = valuesQuestions[currentValuesQuestionIndex];
    valuesQuestionEl.textContent = question.question;
    valuesOptionsContainer.innerHTML = '';
    
    question.options.forEach(option => {
        const optionEl = document.createElement('div');
        optionEl.className = 'quiz-option';
        optionEl.textContent = option;
        optionEl.addEventListener('click', () => selectValuesOption(optionEl, option));
        valuesOptionsContainer.appendChild(optionEl);
    });
    
    selectedValuesOption = null;
    valuesNextBtn.disabled = true;
}

function selectValuesOption(element, option) {
    document.querySelectorAll('#values-options-container .quiz-option').forEach(opt => {
        opt.classList.remove('selected');
    });
    
    element.classList.add('selected');
    selectedValuesOption = option;
    valuesNextBtn.disabled = false;
}

function nextValuesQuestion() {
    if (!selectedValuesOption) return;
    
    if (selectedValuesOption === valuesQuestions[currentValuesQuestionIndex].answer) {
        valuesScore++;
