<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const quizQuestions = [
        {
            question: "What is the capital of France?",
            options: ["London", "Berlin", "Paris", "Madrid"],
            answer: "Paris"
        },
        {
            question: "Which planet is known as the Red Planet?",
            options: ["Venus", "Mars", "Jupiter", "Saturn"],
            answer: "Mars"
        },
        {
            question: "Who painted the Mona Lisa?",
            options: ["Vincent van Gogh", "Pablo Picasso", "Leonardo da Vinci", "Michelangelo"],
            answer: "Leonardo da Vinci"
        },
        {
            question: "What is the largest ocean on Earth?",
            options: ["Atlantic Ocean", "Indian Ocean", "Arctic Ocean", "Pacific Ocean"],
            answer: "Pacific Ocean"
        },
        {
            question: "Which country is home to the kangaroo?",
            options: ["New Zealand", "South Africa", "Australia", "Brazil"],
            answer: "Australia"
        }
    ];

    const questionEl = document.getElementById('question');
    const optionsContainer = document.getElementById('options-container');
    const nextBtn = document.getElementById('next-btn');
    const resultContainer = document.getElementById('result-container');
    const scoreEl = document.getElementById('score');
    const totalEl = document.getElementById('total');
    const restartBtn = document.getElementById('restart-btn');
    const questionContainer = document.getElementById('question-container');

    let currentQuestionIndex = 0;
    let selectedOption = null;
    let score = 0;
    let quizCompleted = false;

    function loadQuestion() {
        const question = quizQuestions[currentQuestionIndex];
        questionEl.textContent = question.question;
        optionsContainer.innerHTML = '';
        
        question.options.forEach(option => {
            const optionEl = document.createElement('div');
            optionEl.className = 'quiz-option';
            optionEl.textContent = option;
            optionEl.addEventListener('click', () => selectOption(optionEl, option));
            optionsContainer.appendChild(optionEl);
        });
        
        selectedOption = null;
        nextBtn.disabled = true;
    }

    function selectOption(element, option) {
        document.querySelectorAll('.quiz-option').forEach(opt => {
            opt.classList.remove('selected');
        });
        
        element.classList.add('selected');
        selectedOption = option;
        nextBtn.disabled = false;
    }

    function nextQuestion() {
        if (!selectedOption) return;
        
        if (selectedOption === quizQuestions[currentQuestionIndex].answer) {
            score++;
        }
        
        currentQuestionIndex++;
        
        if (currentQuestionIndex < quizQuestions.length) {
            loadQuestion();
        } else {
            showResults();
        }
    }

    function showResults() {
        questionContainer.style.display = 'none';
        resultContainer.style.display = 'block';
        scoreEl.textContent = score;
        totalEl.textContent = quizQuestions.length;
        quizCompleted = true;
        nextBtn.style.display = 'none';
    }

    function restartQuiz() {
        currentQuestionIndex = 0;
        score = 0;
        questionContainer.style.display = 'block';
        resultContainer.style.display = 'none';
        nextBtn.style.display = 'block';
        quizCompleted = false;
        loadQuestion();
    }

    nextBtn.addEventListener('click', nextQuestion);
    restartBtn.addEventListener('click', restartQuiz);

    document.getElementById('quizModal').addEventListener('show.bs.modal', function () {
        loadQuestion();
    });

    document.getElementById('quizModal').addEventListener('hidden.bs.modal', function () {
        if (!quizCompleted) return;
        currentQuestionIndex = 0;
        score = 0;
        questionContainer.style.display = 'block';
        resultContainer.style.display = 'none';
        nextBtn.style.display = 'block';
    });

const scienceQuestions = [
    {
        question: "What is the chemical symbol for water?",
        options: ["H2O", "CO2", "NaCl", "O2"],
        answer: "H2O"
    },
    {
        question: "Which part of the plant is responsible for photosynthesis?",
        options: ["Root", "Stem", "Leaf", "Flower"],
        answer: "Leaf"
    },
    {
        question: "What gas do humans breathe in to survive?",
        options: ["Carbon dioxide", "Oxygen", "Nitrogen", "Hydrogen"],
        answer: "Oxygen"
    },
    {
        question: "What gas do plants absorb from the atmosphere?",
        options: ["Oxygen", "Nitrogen", "Carbon dioxide", "Hydrogen"],
        answer: "Carbon dioxide"
    },
    {
        question: "What is the center of the Solar System?",
        options: ["Earth", "Moon", "Mars", "Sun"],
        answer: "Sun"
    }   
];

const scienceQuestionEl = document.getElementById('science-question');
const scienceOptionsContainer = document.getElementById('science-options-container');
const scienceNextBtn = document.getElementById('science-next-btn');
const scienceResultContainer = document.getElementById('science-result-container');
const scienceScoreEl = document.getElementById('science-score');
const scienceTotalEl = document.getElementById('science-total');
const scienceRestartBtn = document.getElementById('science-restart-btn');
const scienceQuestionContainer = document.getElementById('science-question-container');

let currentScienceQuestionIndex = 0;
let selectedScienceOption = null;
let scienceScore = 0;
let scienceQuizCompleted = false;

function loadScienceQuestion() {
    const question = scienceQuestions[currentScienceQuestionIndex];
    scienceQuestionEl.textContent = question.question;
    scienceOptionsContainer.innerHTML = '';
    
    question.options.forEach(option => {
        const optionEl = document.createElement('div');
        optionEl.className = 'quiz-option';
        optionEl.textContent = option;
        optionEl.addEventListener('click', () => selectScienceOption(optionEl, option));
        scienceOptionsContainer.appendChild(optionEl);
    });
    
    selectedScienceOption = null;
    scienceNextBtn.disabled = true;
}

function selectScienceOption(element, option) {
    document.querySelectorAll('#science-options-container .quiz-option').forEach(opt => {
        opt.classList.remove('selected');
    });
    
    element.classList.add('selected');
    selectedScienceOption = option;
    scienceNextBtn.disabled = false;
}

function nextScienceQuestion() {
    if (!selectedScienceOption) return;
    
    if (selectedScienceOption === scienceQuestions[currentScienceQuestionIndex].answer) {
        scienceScore++;
    }
    
    currentScienceQuestionIndex++;
    
    if (currentScienceQuestionIndex < scienceQuestions.length) {
        loadScienceQuestion();
    } else {
        showScienceResults();
    }
}

function showScienceResults() {
    scienceQuestionContainer.style.display = 'none';
    scienceResultContainer.style.display = 'block';
    scienceScoreEl.textContent = scienceScore;
    scienceTotalEl.textContent = scienceQuestions.length;
    scienceQuizCompleted = true;
    scienceNextBtn.style.display = 'none';
}

function restartScienceQuiz() {
    currentScienceQuestionIndex = 0;
    scienceScore = 0;
    scienceQuestionContainer.style.display = 'block';
    scienceResultContainer.style.display = 'none';
    scienceNextBtn.style.display = 'block';
    scienceQuizCompleted = false;
    loadScienceQuestion();
}

scienceNextBtn.addEventListener('click', nextScienceQuestion);
scienceRestartBtn.addEventListener('click', restartScienceQuiz);

document.getElementById('scienceQuizModal').addEventListener('show.bs.modal', function () {
    loadScienceQuestion();
});

document.getElementById('scienceQuizModal').addEventListener('hidden.bs.modal', function () {
    if (!scienceQuizCompleted) return;
    currentScienceQuestionIndex = 0;
    scienceScore = 0;
    scienceQuestionContainer.style.display = 'block';
    scienceResultContainer.style.display = 'none';
    scienceNextBtn.style.display = 'block';
});

const mathQuestions = [
    {
        question: "What is 8 + 5?",
        options: ["10", "12", "13", "14"],
        answer: "13"
    },
    {
        question: "If x + 5 = 12, what is x?",
        options: ["5", "6", "7", "8"],
        answer: "7"
    },
    {
        question: "What is the next number in the sequence: 2, 4, 6, 8, __?",
        options: ["9", "10", "11", "12"],
        answer: "10"
    },
    {
        question: "What is 3/4 as a percentage?",
        options: ["25%", "50%", "75%", "100%"],
        answer: "75%"
    },
    {
        question: "What is the value of 9 × 3?",
        options: ["27", "18", "21", "36"],
        answer: "27"
    }
];

const mathQuestionEl = document.getElementById('math-question');
const mathOptionsContainer = document.getElementById('math-options-container');
const mathNextBtn = document.getElementById('math-next-btn');
const mathResultContainer = document.getElementById('math-result-container');
const mathScoreEl = document.getElementById('math-score');
const mathTotalEl = document.getElementById('math-total');
const mathRestartBtn = document.getElementById('math-restart-btn');
const mathQuestionContainer = document.getElementById('math-question-container');

let currentMathQuestionIndex = 0;
let selectedMathOption = null;
let mathScore = 0;
let mathQuizCompleted = false;

function loadMathQuestion() {
    const question = mathQuestions[currentMathQuestionIndex];
    mathQuestionEl.textContent = question.question;
    mathOptionsContainer.innerHTML = '';
    
    question.options.forEach(option => {
        const optionEl = document.createElement('div');
        optionEl.className = 'quiz-option';
        optionEl.textContent = option;
        optionEl.addEventListener('click', () => selectMathOption(optionEl, option));
        mathOptionsContainer.appendChild(optionEl);
    });
    
    selectedMathOption = null;
    mathNextBtn.disabled = true;
}

function selectMathOption(element, option) {
    document.querySelectorAll('#math-options-container .quiz-option').forEach(opt => {
        opt.classList.remove('selected');
    });
    
    element.classList.add('selected');
    selectedMathOption = option;
    mathNextBtn.disabled = false;
}

function nextMathQuestion() {
    if (!selectedMathOption) return;
    
    if (selectedMathOption === mathQuestions[currentMathQuestionIndex].answer) {
        mathScore++;
    }
    
    currentMathQuestionIndex++;
    
    if (currentMathQuestionIndex < mathQuestions.length) {
        loadMathQuestion();
    } else {
        showMathResults();
    }
}

function showMathResults() {
    mathQuestionContainer.style.display = 'none';
    mathResultContainer.style.display = 'block';
    mathScoreEl.textContent = mathScore;
    mathTotalEl.textContent = mathQuestions.length;
    mathQuizCompleted = true;
    mathNextBtn.style.display = 'none';
}

function restartMathQuiz() {
    currentMathQuestionIndex = 0;
    mathScore = 0;
    mathQuestionContainer.style.display = 'block';
    mathResultContainer.style.display = 'none';
    mathNextBtn.style.display = 'block';
    mathQuizCompleted = false;
    loadMathQuestion();
}

mathNextBtn.addEventListener('click', nextMathQuestion);
mathRestartBtn.addEventListener('click', restartMathQuiz);

document.getElementById('mathQuizModal').addEventListener('show.bs.modal', function () {
    loadMathQuestion();
});

